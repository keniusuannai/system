<script>
    $(function () {
        $('#nav li').on('click', function (e) {
            if ($(this).has('ul').length) {
                var ele_class = $('ul', this).attr("class");
                if (ele_class != 'sub-menu opened') {
                    $('#nav').find('ul:visible').slideToggle("normal").removeClass("opened");
                    $('.icon-angle-down').addClass("closing");
                    $('.closing').removeClass("icon-angle-down").addClass("icon-angle-left");
                    $('.icon-angle-left').removeClass("closing");
                }
                $('ul', this).slideToggle("normal");
                if (ele_class == 'sub-menu opened') {
                    $('ul', this).removeClass("opened");
                    $('.arrow', this).removeClass("icon-angle-down").addClass("icon-angle-left")
                }
                else {
                    $('ul', this).addClass("opened");
                    $('.arrow', this).removeClass("icon-angle-left").addClass("icon-angle-down")
                }
            }
        });
        $('.cur').parents('.sub-menu').prev().trigger('click');
    });
</script>

